# Backend Environment Variables

# Server Configuration
NODE_ENV=production
PORT=5000

# SMTP Configuration for Email Sending
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# API Security
API_KEY=your-secure-api-key
ENCRYPTION_KEY=your-encryption-key
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Download Token Configuration
DOWNLOAD_TOKEN_SECRET=your-download-token-secret
DOWNLOAD_TOKEN_TTL=3600

# Email Recipients
RECEIVER_EMAIL=admin@yourcompany.com

# Frontend Configuration
FRONTEND_ORIGIN=https://your-frontend-domain.onrender.com

# Supabase Configuration (if using)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Company Information for PDF Generation
COMPANY_SIRET=your-company-siret
COMPANY_APE=your-company-ape
COMPANY_TVA=your-company-tva
COMPANY_PHONE=your-company-phone
COMPANY_EMAIL=your-company-email
COMPANY_SITE=your-company-website
COMPANY_LOGO_URL=your-company-logo-url
TVA_RATE=0.20
DEVIS_NUMBER=your-devis-number

# Playwright and PDF Generation Configuration
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1
PDF_STORAGE_PATH=./generated-pdfs
PDF_TEMPLATE_PATH=./templates/devis-pdf.ejs
CHROME_BIN=/usr/bin/google-chrome-stable

# Request Protection
DUPLICATE_WINDOW_SECONDS=15
